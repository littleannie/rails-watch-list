
<div class="container p-4">
  <div class="card-category mt-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>)">
    <%= @list.name %>
  </div>
  <div class="card-product">
    <% @list.bookmarks.each do |bookmark| %>
      <img src=<%= bookmark.movie.poster_url %>>
    <% end %>
      <div class="card-product-infos mt-4">
        <% @list.bookmarks.each do |bookmark| %>
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.comment %></p>
          <%= link_to "X", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <% end %>
      </div>
    </div>
  <div class="buttons mt-4">
    <%= link_to "Create a bookmark", new_list_bookmark_path(@list),class: 'btn-flat' %>
    <%= link_to "Return to all lists", root_path, class: 'btn-flat' %>
  </div>
</div>
